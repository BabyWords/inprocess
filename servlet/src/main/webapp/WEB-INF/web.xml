<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Sample web Project: Study</display-name>
	
	<servlet>
		<servlet-name>HelloWorldAction</servlet-name>
		<servlet-class>com.xiaokai.servlet.action.HelloWorldAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloWorldAction</servlet-name>
		<url-pattern>/h1</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>HelloWorldAction2</servlet-name>
		<servlet-class>com.xiaokai.servlet.action.HelloWorldAction2</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloWorldAction2</servlet-name>
		<url-pattern>/h2</url-pattern>
	</servlet-mapping>
	
	 <filter>     
        <filter-name>common filter</filter-name>     
        <filter-class>com.xiaokai.servlet.action.EncodingFilter</filter-class>     
    </filter>     
    <filter-mapping>     
        <filter-name>common filter</filter-name>    
        <url-pattern>/*</url-pattern>     
    </filter-mapping> 
	
</web-app>
